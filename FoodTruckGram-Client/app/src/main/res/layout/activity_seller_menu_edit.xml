<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.androidtown.foodtruckgram.Activity.CustomerOrderIdentifyDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/menuEdit_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:text="사진 수정"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:src="@drawable/doughnut" />

        //////////////////////////////////////////
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_margin="20dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:id="@+id/menuEdit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="메뉴 이름"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:inputType="text"
                android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2.5"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="메뉴 가격"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/menuEdit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="메뉴 가격 입력"
                android:inputType="number"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left|center"
                android:text="원"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3.3"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="메뉴 설명"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/menuEdit_introduce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="메뉴 설명 입력"
                android:background="@color/white"
                android:inputType="textMultiLine|textNoSuggestions"
                android:padding="5dp" />

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="6"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editCancelBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/menuEditBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
